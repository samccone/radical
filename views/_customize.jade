.customize

  .header
    p Customize this Calendar

  .body
    ul.colors
      li.color-customization
        .header-box
          .color-selector(style="background-color:"+headerColor)
          .selected-color-id(data-name="headerColor", data-val="true")=headerColor
        .label Header Color

      li.background-color
        .header-box
          .color-selector(style="background-color:"+backgroundColor, data-target="#cal table", data-cssp="background")
          .selected-color-id(data-name="backgroundColor", data-val="true")=backgroundColor
        .label Background Color

      li.highlight-color
        .header-box
          .color-selector(style="background-color:"+highlightColor)
          .selected-color-id(data-name="highlightColor", data-val="true")=highlightColor
        .label Highlight Color

    .dashed

    ul.view-selector
      li.list-view List View
      li.month-view.active Month View

    .dashed

    .select-font-label Select Font Stack:
    select.font-selector(data-name="fonts", data-val="true", data-target="#cal table", data-cssp="font-family")
      - ["Open Sans, Helvetica, Sans-serif", "Cursive", 'Baskerville, "Baskerville Old Face", "Hoefler Text", Garamond, "Times New Roman", serif', 'Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif'].forEach(function(v){
        - if (fonts == v)
          option(value=v, selected)= v
        - else
          option(value=v)= v
      -})

    .line

    .embed-code
      .title Embed Code
      .label
        | Copy this code into your website to embeded your calendar.
      .embed-code-box(data-clipboard-text='sdfsdff', title='copy')
        pre
