#cal-event
  width: 340px
  display: none
  position: absolute
  background: #fff
  z-index: 2
  transition: all .2s ease-out-back
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.14)
  .header
    background: blue
    color: #fff
    fs: 1em
    padding: 9px 15px
    border-radius: 4px 4px 0 0
    group()
    bold()
    position: relative

    p
      float: left
      margin: 0

    .close
      float: right
      padding-left: 15px
      height: 100%
      cursor: pointer
      hover-fade: .7
      transiton()

    &:before
      content: ''
      triangle: 'up' 7px blue
      absolute: top -7px left 48%

  .body
    border: 1px solid #caccd6
    padding: 10px

    .empty
      color: #bbbbbf
      text-align: center

    .between
      margin-right: 5px
      bold()
      fs: .8em
      color: #787887

    input[type=text]
      border: 1px solid #c7c9d4
      round: 3px
      fs: .8em
      padding: .5em
      font-family: 'Open Sans', helvetica-neue
      margin: 0 5px 5px 0
      color: #787887
      display: block
      width: 100%
      padding-left: 20px
      box-sizing: border-box
      &[name="name"]
        background: url("/img/pencil.png") no-repeat 5px center
        background-size: 10px
      &[name="location"]
        background: url("/img/marker.png") no-repeat 5px center
        background-size: 8px
      &:focus
        outline: 0
        border-color: #a7aaba

    select, .current-time
      display: inline-block
      border: 1px solid #c7c9d4
      background: none
      -webkit-appearance: none
      fs: .8em
      padding: .5em
      font-family: 'Open Sans', helvetica-neue
      color: #787887

      margin: 0 5px 5px 0
      -webkit-font-smoothing: antialiased
      bold()

      &.to
        margin-right: 0px
      &:focus
        outline: 0
        border-color: #a7aaba

    .current-time
      padding-left: 20px
      background: url("/img/clock.png") no-repeat 5px center
      background-size: 10px
      width: 100px
      margin-right: 32px
      border-radius: 5px

    input[type=submit]
      button: #0471e1
      -webkit-font-smoothing: antialiased
      transition()
      width: 100%
      margin-top: 20px

  .evnt
    group()
    margin-bottom: 10px

    time
      float: left
      color: #66c8ca
      font-weight: bold
      margin-top: 5px
      margin-right: 18px
      margin-left: 6px

    .middle
      float: left

      p
        margin: 0
        bold()
        color: #2c2c35
        fs: .9em

      small
        opacity: .5
        font-size: 70%

    .add-to-calendar
      size: 33
      rounded()
      float: right
      background: #cdcdcd url('/img/cal.png') center center no-repeat
      margin-top: 3px
      transition()
      cursor: pointer
      position: relative

      &:hover
        background-color: darken(#cdcdcd, 15%)

.add-to-calendarmycalendar
  background: rgba(#000,.8)
  width: 200px
  color: #fff
  padding: 10px
  round: 3px
  absolute: top -48px left 48px

  &:before
    content: ""
    triangle: left 10px rgba(#000,.8)
    absolute: top 48% left -10px

  label
    bold()
    text-align: center
    inline-block()
    margin-bottom: 7px

  .add-to-calendar-toggle
    display: none

  a
    color: #fff
    display: block
    text-decoration: none
    fs: .8em
