.customize
  width: 240px
  position: absolute
  background: #fff
  z-index: 2
  transition: all .2s ease-out-back

  .header
    background: blue
    color: #fff
    fs: 1em
    padding: 9px 15px
    border-radius: 4px 4px 0 0
    group()
    bold()
    position: relative

  p
    float: left
    margin: 0

  .body
    height: 320px
    border: 1px solid #caccd6
    padding: 10px

  ul
    reset-list()

    .label
      display: inline-block

    .header-color-picker
      border-radius: 4px
      border: 1px solid #caccd6
      padding: 5px

      .header-color
        width: 10px
        height: 10px
        background: #ed4343
        display: inline-block

    .header-color-label
      margin-left: 10px