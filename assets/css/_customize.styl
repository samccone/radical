.customize
  background: #fff
  z-index: 2
  transition: all .2s ease-out-back


  .header
    background: blue
    color: #fff
    fs: 1em
    padding: 9px 15px
    border-radius: 4px 4px 0 0
    group()
    bold()
    position: relative

  p
    float: left
    margin: 0

  .body
    height: 100%
    border: 1px solid #caccd6
    padding: 15px

  ul.colors
    reset-list()
    bold()
    margin-bottom: 25px

    li
      group()
      margin-bottom: 15px

    .header-box
      width: 80px
      border-radius: 4px
      border: 1px solid #caccd6
      padding: 5px
      margin-right: 10px
      font-size: .8em
      background: #fcfcfc
      float: left
      transition background 400ms
      &.selected
        background: rgb(240, 240, 240)
      .color-selector
        cursor: pointer
        width: 18px
        height: 18px
        border-radius: 4px
        background: #ea4243
        float: left
        margin-right: 5px
        box-shadow: inset 0 2px 2px rgba(#000, 0.3)

      .selected-color-id
        margin-top: 2px
        float: left

    .label
      margin-left: 10px
      margin-top: 7px
      font-size: .9em

  .view-selector
    group()
    bold()
    font-size: .8em
    border-radius: 4px
    border: 1px solid darken(@background, 40%)
    background: #fcfcfc
    color: #cbcbcd
    text-align: center
    margin: 20px 0
    padding: 0

    .list-view, .month-view
      display: inline-block
      width: 50%
      padding: 5px
      border-box()
      cursor: pointer
      box-shadow: inset 0 1px 1px rgba(#000,.05)
      transition()

      &:first-child
        border-radius: 4px 0 0 4px

      &:last-child
        border-radius: 0 4px 4px 0
        border-left: 1px solid #caccd6

    .active
      color: #6b6b72
      gradient: #fff darken(#fff, 4%)
      box-shadow: 0 2px 1px rgba(#000,.1)

  .dashed
    border-top: 1px dashed #cbcbcd

  .select-font-label
    bold()
    margin-top: 20px
    margin-bottom: 10px

  .font-selector
    background: #fefefe
    border-color: #c7c9d4
    color: #67676f
    height: 30px
    bold()
    fs: .8em
    -webkit-font-smoothing: antialiased
    width: 100%

  .line
    margin-top: 30px
    border-bottom: 1px solid #cbcbcd
    width: 319px
    margin-bottom: 20px
    width: 100%

  .embed-code
    .title
      bold()
      margin-bottom: 10px

    .label
      fs: .8em

    .embed-code-box
      font-family: monospace
      margin-top: 15px
      width: 90%
      border-radius: 4px
      border: 1px solid #caccd6
      padding: 12px
      font-size: .8em
      background: #fcfcfc
      margin: 20px auto
      word-wrap: break-word

  .color-picker
    display: none
